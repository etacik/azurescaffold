{
  "$schema": "http://schema.management.azure.com/schemas/2015-10-01-preview/policyDefinition.json",
  "if": {
    "not": {
      "anyOf": [
        {
          "field": "type",
          "like": "Microsoft.Resources/*"
        },
        {
          "field": "type",
          "like": "Microsoft.Storage/*"
        },
        {
          "field": "type",
          "like": "Microsoft.AppService/*"
        },
        {
          "field": "type",
          "like": "Microsoft.Web/*"
        },
        {
          "field": "type",
          "like": "Microsoft.insights/*"
        }
      ]
    }
  },
  "then": {
    "effect": "deny"
  }
} 
